<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.musicplayerproject">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.BATTERY_STATS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo_music"
        android:label="Music.com"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".FrontPage"
            android:launchMode="singleTop"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Artist"
            android:label="@string/label_artist"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name=".NewTrending"
            android:label="@string/label_newtrending"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Album"
            android:label="@string/label_album"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Profile"
            android:label="@string/label_profile"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Folder"
            android:label="@string/label_folder"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name=".PlayPause"
            android:label="@string/label_nowplaying"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Payment"
            android:label="@string/label_payment"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:label="@string/main_activity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
    </application>

</manifest>